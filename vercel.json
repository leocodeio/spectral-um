{
  "version": 2,
  "installCommand": "pnpm install",
  "buildCommand": "npx prisma generate --schema=./src/db/prisma/schema.prisma && pnpm run build",
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 30,
      "includeFiles": "dist/**"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api"
    }
  ]
}
